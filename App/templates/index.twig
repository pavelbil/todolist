{% extends "layout.twig" %}

{% block title %}
    {{ title }}
{% endblock %}

{% block content %}
    <h1>{{ title }}</h1>

    <ul>
        {% if app.user %}
            <li><a href="{{ url('task') }}">My todo list</a></li>
        {% else %}
            <li><a href="{{ url('user.login') }}">Login</a></li>
            <li><a href="{{ url('user.register') }}">Create account</a></li>
        {% endif %}
    </ul>
{% endblock %}